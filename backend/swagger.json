{
    "openapi": "3.0.0",
    "info": {
      "title": "EstadoCadastroAPI",
      "version": "1.0.0",
      "description": "Cadastro de estados e sua sigla e busca da lista do estados cadastrados"
    },
    "paths": {
      "/formulario": {
        "post": {
          "summary": "Salvar dados do formul√°rio",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "requestBody": {
            "content": {
              "application/x-www-form-urlencoded": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "estado": {
                      "type": "string"
                    },
                    "uf": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Sucesso"
            }
          }
        }
      },
      "/estados": {
        "get": {
          "summary": "Obter estados",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "responses": {
            "200": {
              "description": "Lista de estados"
            }
          }
        }
      },
      "/gerar-token": {
        "post": {
          "summary": "Gerar token",
          "requestBody": {
            "content": {
              "application/x-www-form-urlencoded": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "usuario": {
                      "type": "string"
                    },
                    "senha": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Sucesso"
            }
          }
        }
      },
      "/recurso-protegido": {
        "get": {
          "summary": "Acessar recurso protegido",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "responses": {
            "200": {
              "description": "Recurso protegido acessado com sucesso"
            }
          }
        }
      }
    },
    "components": {
      "securitySchemes": {
        "bearerAuth": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        }
      }
    }
  }
  
  